{
  "name": "sharepoint-job-board",
  "version": "1.0.0",
  "description": "Job board using jQuery DataTables, compatible with SharePoint 2016 and local development.",
  "scripts": {
    "start": "http-server ./src -p 8080",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "node scripts/build.js && node scripts/update-cewp.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "http-server": "14.1.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jsdom": "24.0.0",
    "prettier": "^3.7.4"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/test-setup.js"
    ]
  }
}
